{
  "name": "rethink-english-vocab-v2",
  "version": "1.0.0",
  "description": "English vocabulary learning app with AI-powered features",
  "main": "src/index.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "bun test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "api:dev": "bun run --hot src/api/server.ts",
    "api:build": "bun build src/api/server.ts --outdir dist/api"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "openai": "^4.24.1",
    "uuid": "^9.0.1",
    "lucide-svelte": "^0.447.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "vite": "^7.0.4"
  },
  "type": "module"
}